{
  "auto-close-tag.disableOnLanguage": ["typescript"],
  "workbench.iconTheme": "material-icon-theme",
  "editor.suggestSelection": "first",
  "workbench.startupEditor": "none",
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', Monaco, 'Courier New', monospace, Meslo",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "window.restoreWindows": "none",
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.semi": false,
  "breadcrumbs.enabled": false,
  "editor.smoothScrolling": true,
  "editor.hover.delay": 500,
  "editor.fontLigatures": true,
  "editor.lineHeight": 25,
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "terminal.background": "#21252b",
      "editor.background": "#21252b",
      "sideBar.border": "#303538"
    }
  },
  "template-string-converter.autoRemoveTemplateString": true,
  "template-string-converter.validLanguages": [
    "svelte",
    "typescript",
    "javascript",
    "typescriptreact",
    "javascriptreact",
    "javascriptvue"
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.minimap.enabled": false,
  "files.autoSave": "onWindowChange",
  "editor.wordWrap": "wordWrapColumn",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "editor.cursorSmoothCaretAnimation": true,
  "diffEditor.codeLens": true,
  "terminal.integrated.automationShell.linux": "",
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
  "material-icon-theme.folders.color": "#e5e3d9",
  "editor.inlayHints.fontFamily": "'Fira Code'",
  "editor.linkedEditing": true,
  "terminal.integrated.fontFamily": "'MesloLGM Nerd FOnt'",
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.enablePersistentSessions": false,
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "workbench.colorTheme": "One Dark Pro",
  "zenMode.fullScreen": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "workbench.activityBar.visible": false,
  "window.titleBarStyle": "custom",
  "workbench.panel.defaultLocation": "right",
  "editor.cursorWidth": 15,
  "workbench.editor.tabCloseButton": "off",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,
  "search.exclude": {
    "**/node_modules": true
  },
  "workbench.statusBar.visible": false,
  "terminal.integrated.tabs.enabled": false
}
